<main>
  <div class="container">
    <p id="notice"></p>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      
        <div class="form_group">
          <div class="user">Name</div>
          <div class="user_name">
            <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
          </div>
        </div>
        <div class="form_group ">
          <div class="user">Image</div>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <div class="form_group">
          <div class="user">Introduction</div>
          <%= f.text_area :introduction %>
        </div>
        <div class="form_group btn btn-secondary">
           <%= f.submit "Update User" %>
        </div>
      
      <% end %>
    </div>
  </div>
</main>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>