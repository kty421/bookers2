<h1>画像投稿フォーム</h1>
<%= form_with model: @book do |f| %>
  <h4>ショップ名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<% @books.each do |book| %>
  <div>
    <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
    <%= link_to book_path(book.id) do %>
      <p>説明：<%= book.title %></p>
    <% end %>
    <p>説明：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>